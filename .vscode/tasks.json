{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe kompiluj wszystko",
            "command": "g++",
            "args": [
                "-fdiagnostics-color=always",
                "-std=c++11",
                "-g",
                "${workspaceFolder}\\**.cpp",
                "-o",
                "${workspaceFolder}\\bocznica.exe"
            ],
            "options": {
                "cwd": "C:\\MinGW\\bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Zadanie wygenerowane przez debuger.",
            "dependsOn": "clean"
        },
        {
            "label": "clean",
            "command": "del",
            "type": "shell",
            "args": [
                "*.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        }
    ],
    "version": "2.0.0"
}